<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        //背景透明，不设滑动关闭时背景就是黑的。
        <item name="android:windowIsTranslucent">true</item>
        //Activity右滑进出的动画，觉得这个不好看随便换成自己的
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>

        <!--<item name="colorControlNormal">@color/white</item>-->
        <!--<item name="colorControlNormal">#3F51b5</item>-->
        <!-- AppCompatEditText选择的底线颜色 -->
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>//就是关掉这个Activity的透明背景
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--tablayout的字体大小-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18dp</item>
    </style>
</resources>
